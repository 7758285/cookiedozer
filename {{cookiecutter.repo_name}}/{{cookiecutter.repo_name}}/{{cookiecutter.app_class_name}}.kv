#:kivy {{cookiecutter.kivy_version}}
#:import randint random.randint
#:import to_rgba kivy.utils.get_color_from_hex
#:import _ {{cookiecutter.repo_name}}._

#:set link_clr '222222'
#:set kivy_github 'https://github.com/kivy/kivy'
#:set cookiecutter_github 'https://github.com/audreyr/cookiecutter'
#:set cookiedozer_github 'https://github.com/hackebrot/cookiedozer'
#:set repo_github 'https://github.com/{{cookiecutter.github_username}}/{{cookiecutter.repo_name}}'

<Slide@BoxLayout>:
    spacing: 10
    bg_hex_clr: '000000'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: to_rgba(root.bg_hex_clr)
        Rectangle:
            pos: self.pos
            size: self.size


<I18NLabel>:
    source_text: ''
    halign: 'center'
    valign: 'bottom'
    text_size: self.size
    text: app.translation(self.source_text)


<RefLabel>:
    halign: 'center'
    valign: 'top'
    text_size: self.size
    markup: True


<TransitionProgress>:
    size_hint: 0.8, 0.1
    value: app.timer


AnchorLayout:
    anchor_y: 'bottom'
    Carousel:
        id: carousel
        loop: True
        RefLabel:
            bg_hex_clr: '154152'
            text:
                "'{{cookiecutter.app_title}}'\n\n" \
                "{{cookiecutter.short_description}}"
            name: 'hello'
        RefLabel:
            bg_hex_clr: '057173'
            text:
                _(
                    "This app uses Kivy, a Python Framework for NUI Development.\n\n" \
                    "[ref={kivy_github}][color={link_clr}]{kivy_github}[/color][/ref]" \
                    "".format(**locals())
                )
            name: 'kivy'
        RefLabel:
            bg_hex_clr: '487353'
            text:
                _(
                    "It was generated with the Python command-line utility\nCookiecutter along with Cookiedozer.\n\n" \
                    "[ref={cookiecutter_github}][color={link_clr}]{cookiecutter_github}[/color][/ref]\n" \
                    "[ref={cookiedozer_github}][color={link_clr}]{cookiedozer_github}[/color][/ref]\n" \
                    "".format(**locals())
                )
            name: 'cookiecutterdozer'
        RefLabel:
            bg_hex_clr: 'C2872E'
            text:
                _(
                    "Distributed under the terms of the MIT license,\n'{{cookiecutter.app_title}}' is free and open source software."
                )
            name: 'license'
        RefLabel:
            bg_hex_clr: 'AB3E2B'
            text:
                _(
                    "Fork me on GitHub\n\n" \
                    "[ref={repo_github}][color={link_clr}]{repo_github}[/color][/ref]" \
                    "".format(**locals())
                )
            name: 'github'
    TransitionProgress:
        id: progress_bar
